<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Ne pas réécrire l'API
  RewriteRule ^api/ - [L]

  # Laisse passer les fichiers/dossiers existants
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Fallback SPA
  RewriteRule ^ index.html [L]
</IfModule>
